    <script>
        // --- Mobile Menu Toggle ---
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        const openIcon = document.getElementById('menu-open-icon');
        const closeIcon = document.getElementById('menu-close-icon');

        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
            openIcon.classList.toggle('hidden');
            closeIcon.classList.toggle('hidden');
        });

        // --- Button Click Handlers ---
        const handleButtonClick = (buttonName) => console.log(`${buttonName} button clicked!`);
        document.querySelectorAll('.js-search-btn').forEach(b => b.addEventListener('click', () => handleButtonClick('Search')));
        document.querySelectorAll('.js-user-btn').forEach(b => b.addEventListener('click', () => handleButtonClick('User Account')));
        document.querySelectorAll('.js-cart-btn').forEach(b => b.addEventListener('click', () => handleButtonClick('Shopping Cart')));
        const shopNowButton = document.getElementById('shop-now-btn');
        if (shopNowButton) {
            shopNowButton.addEventListener('click', (e) => {
                e.preventDefault(); 
                handleButtonClick('Shop Now');
            });
        }

        // --- Swiper Initialization ---
        // This script initializes the product slideshows.
        const swiperOptions = {
            loop: true,
            grabCursor: true,
            slidesPerView: 1,
            spaceBetween: 20,
            breakpoints: {
                640: { slidesPerView: 2, spaceBetween: 20 },
                768: { slidesPerView: 3, spaceBetween: 30 },
                1024: { slidesPerView: 4, spaceBetween: 30 },
            }
        };

        // Initialize New Arrivals Swiper
        new Swiper('.new-arrivals-swiper', {
            ...swiperOptions,
            pagination: {
                el: '.new-arrivals-swiper .swiper-pagination',
                clickable: true,
            },
        });

        // Initialize Trending Sneakers Swiper
        new Swiper('.trending-sneakers-swiper', {
            ...swiperOptions,
            navigation: {
                nextEl: '.trending-sneakers-swiper .swiper-button-next',
                prevEl: '.trending-sneakers-swiper .swiper-button-prev',
            },
        });

        // Initialize Accessories Swiper
        new Swiper('.accessories-swiper', {
            ...swiperOptions,
            pagination: {
                el: '.accessories-swiper .swiper-pagination',
                clickable: true,
            },
        });

    </script>
